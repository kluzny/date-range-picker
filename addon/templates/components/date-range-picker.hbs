{{input value=rangeFormatted
        class="date-range-picker-input"
        focus-in="toggleIsExpanded"}}

{{#if isExpanded}}
  {{calendar-display classNames="left-calendar"
                     selectionStart=startDate
                     selectionEnd=endDate
                     month=startMonth
                     daySelected="startSelected"
                     prevMonth="prevStartMonth"
                     nextMonth="nextStartMonth"}}

  {{calendar-display classNames="right-calendar"
                     selectionStart=startDate
                     selectionEnd=endDate
                     month=endMonth
                     daySelected="endSelected"
                     prevMonth="prevEndMonth"
                     nextMonth="nextEndMonth"}}

  {{presets-picker presets=presets
                   startSelected="startSelected"
                   endSelected="endSelected"}}

  <button {{action "toggleIsExpanded"}}>Close</button>
{{/if}}